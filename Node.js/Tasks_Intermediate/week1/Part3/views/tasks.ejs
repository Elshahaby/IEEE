<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/style.css">
  <title>Tasks</title>
</head>
<body>
  <h1>All Tasks</h1>

  <ul>
    <% tasks.forEach(task => { %>
      <li>
        
        <a href="/task/<%= task._id %>">
          
        
          <%= task.name %>
          <br>
          <%= task.date %>
          <br>
          <%= task.description %>
          <br>
          
          <form action="/task/delete/<%= task._id %>" method="POST" style="display:inline;">
            <button type="submit">Delete</button>
          </form>

        </a>


      </li>
    <% }); %>
  </ul>

  <br>
  <a href="/task/addTask">Add a New Task</a>
</body>
</html>
